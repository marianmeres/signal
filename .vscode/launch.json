	"version": "0.2.0",
	"configurations": [
		{
			"request": "launch",
			"name": "Deno (run)",
			"type": "node",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"env": {},
			"runtimeExecutable": "/opt/homebrew/bin/deno",
			"runtimeArgs": ["run", "--unstable", "--inspect-wait", "--allow-all"],
			"attachSimplePort": 9229
		},
		{
			"request": "launch",
			"name": "Deno (test)",
			"type": "node",
			"program": "${file}",
			"cwd": "${workspaceFolder}",
			"env": {},
			"runtimeExecutable": "/opt/homebrew/bin/deno",
			"runtimeArgs": ["test", "--unstable", "--inspect-wait", "--allow-all"],
			"attachSimplePort": 9229
		}
	]
}
